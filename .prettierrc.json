{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4,
    "plugins": [
        "prettier-plugin-css-order"
    ],
    "overrides": [
        {
            "files": [
                "*.html"
            ],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": [
                "*.vue"
            ],
            "options": {
                "cssDeclarationSorter": "alphabetical"
            }
        }
    ]
}